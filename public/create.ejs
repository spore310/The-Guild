<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>Visual Code</title>

</head>
<style>
  img {
    float: right;
  }
</style>

<body>
  <div class="navigation-bar">
    <%- include('partials/header.ejs') %>
  </div>
  <br>
  <h1>The Guild NFT Maker</h1>
  
  <div class="input-fields">

    <form action="/confirm" method="POST">

      <label for="nftName">Enter Name:</label>
      <input type="text" name="nftName" placeholder="Enter a new file name"><br>
      <% inputs.forEach(field=>{ %>
        <label for=<%=field.name %>> <%= field.name.toUpperCase() %>: </label>

        <select name="layers" id="<%= field.name %>">
          <% field.assets.forEach(file=>{ %>
            <option value="<%=file%>">
              <%=file%>
            </option>

            <% });%>
        </select>
        <br>
        <% });%>
          <input type="submit" value="create" />
    </form>



  </div>

</body>

</html>
